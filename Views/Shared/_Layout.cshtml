            <span class="logo_name"> Personal App</span>
        </div>
        <ul class="nav-links">
            <li>
                <a href="@Url.Action("HomePage","HomePage")">
                    <i class='bx bx-grid-alt'> </i>
                    <span class="link_name"> Dashboard</span>
                </a>
                <ul class="sub-menu blank">
                    <li> <a class="link_name" href="@Url.Action("HomePage","HomePage")"> Dashboard</a> </li>
                </ul>
            </li>
            <li>
                <a href="@Url.Action("TodoList","TodoList")">
                    <i class='bx bx-dollar-circle'> </i>
                    <span class="link_name">Daily Expense</span>
                </a>
                <ul class="sub-menu blank">
                    <li> <a class="link_name" href="@Url.Action("TodoList","TodoList")">Daily Expense</a> </li>
                </ul>
            </li>
            <li>
                <a href="@Url.Action("Categories","Category")">
                    <i class='bx bx-layer'> </i>
                    <span class="link_name">Category</span>
                </a>
                <ul class="sub-menu blank">
                    <li> <a class="link_name" href="@Url.Action("Categories","Category")">Category</a> </li>
                </ul>
            </li>
            <li>
                <a href="@Url.Action("MonthExpenseSheet","MonthExpenseSheet")">
                    <i class='bx bx-folder-open'> </i>
                    <span class="link_name">Month Expense</span>
                </a>
                <ul class="sub-menu blank">
                    <li> <a class="link_name" href="@Url.Action("MonthExpenseSheet","MonthExpenseSheet")">Month Expense</a> </li>
                </ul>
            </li>
            @*<li>
            <a href="@Url.Action("ViewMoneyManagement","MoneyManagement")">
                <i class='bx bx-coin-stack'> </i>
                <span class="link_name">All Expenses</span>
            </a>
            <ul class="sub-menu blank">
                <li> <a class="link_name" href="@Url.Action("ViewMoneyManagement","MoneyManagement")">All Expenses</a> </li>
            </ul>
        </li>*@
            <li>
                <a href="@Url.Action("ViewAllMonths","Months")">
                    <i class='bx bx-coin-stack'> </i>
                    <span class="link_name">All Salary</span>
                </a>
                <ul class="sub-menu blank">
                    <li> <a class="link_name" href="@Url.Action("ViewAllMonths","Months")">All Salary</a> </li>
                </ul>
            </li>
            <li>
                <a href="@Url.Action("AddNewMonth","Months")">
                    <i class='bx bx-add-to-queue'> </i>
                    <span class="link_name">Add Salary</span>
                </a>
                <ul class="sub-menu blank">
                    <li> <a class="link_name" href="@Url.Action("AddNewMonth","Months")">Add Salary</a> </li>
                </ul>
            </li>
            <li style="margin-bottom: 0;">
                <a href="@Url.Action("Logout", "Login")">
                    <i class='bx bx-log-out'> </i>
                    <span class="link_name">Logout</span>
                </a>
                <ul class="sub-menu blank">
                    <li> <a class="link_name" href="@Url.Action("Logout", "Login")">Logout</a> </li>
                </ul>
            </li>
        </ul>
       

    </div>
    <section class="home-section">
        <div class="home-content">
            <span class="text">@ViewBag.head</span>
            <span class="text" style=" margin-left: auto;">Hello, @Session["username"].ToString()</span>
        </div>



        <div> @RenderBody()</div>

    </section>

    <script>
        let arrow = document.querySelectorAll(".arrow");
        for (var i = 0; i < arrow.length; i++) {
            arrow[i].addEventListener("click", (e) => {
                let arrowParent = e.target.parentElement.parentElement; //selecting main parent of arrow
                arrowParent.classList.toggle("showMenu");
            });
        }
        let sidebar = document.querySelector(".sidebar");
        let sidebarBtn = document.querySelector(".bx-menu");
        console.log(sidebarBtn);
        sidebarBtn.addEventListener("click", () => {
            sidebar.classList.toggle("close");
        });


        var $table = $('#table');
        $(function () {
            $('#toolbar').find('select').change(function () {
                $table.bootstrapTable('refreshOptions', {
                    exportDataType: $(this).val()
                });
            });
        })

        var trBoldBlue = $("table");

        $(trBoldBlue).on("click", "tr", function () {
            $(this).toggleClass("bold-blue");
        });
    </script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>