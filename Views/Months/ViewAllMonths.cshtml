@model PersonalApp.Models.Months

@{
    ViewBag.Title = "ViewAllMonths";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MonthExpenseSheet</title>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/1.7.1/css/buttons.dataTables.min.css">

    <style>
        table {
            width: 80%;
            margin-left: auto;
            margin-right: auto;
            border-collapse: collapse;
            background-color: #2e2e2e;
            color: #fff;
        }

        th, td {
            border: 1px solid #444;
            padding: 12px;
            text-align: left;
            background-color: #2e2e2e;
        }

            th input {
                width: 100%;
                padding: 5px;
                box-sizing: border-box;
                border: 1px solid #555;
                border-radius: 4px;
            }

            td img {
                height: 40px;
                width: 40px;
                border-radius: 4px;
            }

        tbody tr:nth-child(even) {
            background-color: #3c3c3c;
        }

        tbody tr:hover {
            background-color: #555;
        }
    </style>
</head>
<body>
    <br />
    <br />
    <div class="container mt-4">
        <table id="example" class="table-dark">
            <thead class="table-dark">
                <tr>
                    <th><input type="text" id="search-h2" placeholder="Search"></th>
                    <th><input type="text" id="search-h3" placeholder="Search"></th>
                    <th><input type="text" id="search-h4" placeholder="Search"></th>
                    <th><input type="text" id="search-h5" placeholder="Search"></th>
                </tr>
                <tr class="table-dark">
                    <th>Name</th>
                    <th>Salary Month</th>
                    <th>Salary Amount</th>
                    <th>Company</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.monthsClassesList)
                {
                    <tr>
                        <td>@item.UserName</td>
                        <td>@item.SalaryDate.ToLongDateString()</td>
                        <td>@item.SalaryAmt</td>
                        <td>@item.CompanyName</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.7.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.7.1/js/buttons.flash.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.7.1/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.7.1/js/buttons.print.min.js"></script>
    <script>
        $(document).ready(function () {
            var table = $('#example').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ],
                scrollY: '65vh',
                scrollCollapse: true,
                paging: false,
                ordering: false
            });

           

            $('#search-h2').on('keyup change clear', function () {
                table.column(0).search(this.value).draw();
            });

            $('#search-h3').on('keyup change clear', function () {
                table.column(1).search(this.value).draw();
            });

            $('#search-h4').on('keyup change clear', function () {
                table.column(2).search(this.value).draw();
            });

            $('#search-h5').on('keyup change clear', function () {
                table.column(3).search(this.value).draw();
            });
        });
    </script>
</body>
</html>

